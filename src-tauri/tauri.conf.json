{
  "$schema": "https://raw.githubusercontent.com/nicholasgasior/tauri/refs/heads/dev/crates/tauri-config-schema/schema.json",
  "productName": "Slide Linker",
  "version": "0.1.0",
  "identifier": "com.slidelinker.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Slide Linker",
        "width": 1440,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": {
      "resources/pdfium.dll": "pdfium.dll"
    }
  }
}
